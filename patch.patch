   void calc_pitch_roll_ms2(float ax, float ay, float az,
                          float *pitch_deg, float *roll_deg)
 {
     float denom = sqrtf(ay*ay + az*az);
 
     if (denom == 0.0f) {
         *pitch_deg = 0.0f;
     } else {
         *pitch_deg = atan2f(-ax, denom) * 180.0f / (float)M_PI;
     }
 
     *roll_deg = atan2f(ay, az) * 180.0f / (float)M_PI;
 }
 
